<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup xmlns="http://xamarin.com/schemas/2014/forms"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:xct="clr-namespace:Xamarin.CommunityToolkit.UI.Views;assembly=Xamarin.CommunityToolkit"
           x:Class="MyProject.SendReceiptToMsgBox">
    <xct:Popup.Resources>
        <ResourceDictionary Source="../Resources/ButtonStyles.xaml"/>
        <ResourceDictionary Source="../Resources/EntryStyles.xaml"/>
    </xct:Popup.Resources>
    <Frame 
        BackgroundColor="White"
        CornerRadius="20">
        <StackLayout>
            <Label 
                FontSize="Header"
                Text="Отправить чек на телефон или электронную почту"/>
            <Label 
                FontSize="Header"
                Text="Заполнение обоих полей не обязательно"/>
            <Entry 
                Placeholder="E-mail"
                PlaceholderColor="#e5e5e5"
                Style="{StaticResource white_cornered_entry}"/>
            <Entry 
                Placeholder="Телефон"
                PlaceholderColor="#e5e5e5"
                Style="{StaticResource white_cornered_entry}"/>
            <Button 
                Text="Сохранить"
                Style="{StaticResource green_cornered_filled_btn}"/>
        </StackLayout>
    </Frame>
   

</xct:Popup>