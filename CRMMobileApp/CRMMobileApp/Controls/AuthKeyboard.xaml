<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRMMobileApp.Controls.AuthKeyboard">
    <ContentPage.Resources>
        <ResourceDictionary Source="../Resources/ButtonStyles.xaml"/>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button 
                Text="1" 
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource auth_blue_rounded_btn}"/>
            <Button 
                Text="2" 
                Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource auth_blue_rounded_btn}"/>
            <Button 
                Text="3" 
                Grid.Row="0"
                Grid.Column="2"
                Style="{StaticResource auth_blue_rounded_btn}"/>
            <Button 
                Text="4" 
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource auth_blue_rounded_btn}"/>
            <Button 
                Text="5" 
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource auth_blue_rounded_btn}"/>
            <Button 
                Text="6" 
                Grid.Row="1"
                Grid.Column="2"
                Style="{StaticResource auth_blue_rounded_btn}"/>
            <Button 
                Text="7" 
                Grid.Row="2"
                Grid.Column="0"
                Style="{StaticResource auth_blue_rounded_btn}"/>
            <Button 
                Text="8" 
                Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource auth_blue_rounded_btn}"/>
            <Button 
                Text="9" 
                Grid.Row="2"
                Grid.Column="2"
                Style="{StaticResource auth_blue_rounded_btn}"/>
            <Button 
                Text="0" 
                Grid.Row="3"
                Grid.Column="1"
                Style="{StaticResource auth_blue_rounded_btn}"/>
            <Button 
                Grid.Row="3"
                Grid.Column="2"
                Style="{StaticResource button_back}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>